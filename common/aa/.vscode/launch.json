{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "aa (wsl)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/bin/true",
      "cwd": "${workspaceFolder}/",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "preLaunchTask": "aa"
    },
    {
      "name": "aa (win)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\bin\\true", // Windows 可执行文件路径
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true, // 使用外部控制台
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe", // GDB 路径
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "aa"
    }
  ]
}
